<%- if controller_name != 'sessions' %>
  <div class="mb-2">
    <%= link_to new_session_path(resource_name), class: "btn btn-outline-primary d-block" do %>
      <i class="bi bi-door-open-fill"></i> もうアカウントを持ってる？
    <% end %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="mb-2">
    <%= link_to new_registration_path(resource_name), class: "btn btn-outline-success d-block" do %>
      <i class="bi bi-person-plus"></i> 新規アカウント作成
    <% end %>
  </div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="mb-2">
    <%= link_to new_password_path(resource_name), class: "btn btn-outline-warning d-block" do %>
      <i class="bi bi-key"></i> パスワードを忘れましたか？
    <% end %>
  </div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class="mb-2">
    <%= link_to new_confirmation_path(resource_name), class: "btn btn-outline-info d-block" do %>
      <i class="bi bi-envelope"></i> 確認メールを受け取っていませんか？
    <% end %>
  </div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <div class="mb-2">
    <%= link_to new_unlock_path(resource_name), class: "btn btn-outline-danger d-block" do %>
      <i class="bi bi-unlock"></i> ロック解除の指示を受け取っていませんか？
    <% end %>
  </div>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <div class="mb-2">
      <%= button_to omniauth_authorize_path(resource_name, provider), class: "btn btn-outline-dark d-block", data: { turbo: false } do %>
        <i class="bi bi-box-arrow-in-right"></i> <%= "#{OmniAuth::Utils.camelize(provider)}でサインイン" %>
      <% end %>
    </div>
  <% end %>
<% end %>
