
<% flash.each do |type, message| %>
  <div class="flash_message alert alert-<%= bootstrap_class_for(type) %> alert-dismissible fade show" role="alert" data-controller="flash">
    <%= message %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
